[Unit]
Description=Gunicorn instance to serve sih_backend
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/your/project/backend
Environment="PATH=/path/to/venv/bin"
Environment="DJANGO_SETTINGS_MODULE=sih_backend.settings"
# Add any other env vars needed, e.g. DJANGO_SECRET_KEY
ExecStart=/path/to/venv/bin/gunicorn --config /path/to/your/project/backend/gunicorn_config.py sih_backend.wsgi:application

[Install]
WantedBy=multi-user.target
